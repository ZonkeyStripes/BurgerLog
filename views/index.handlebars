<div id="burgMenu">


<h2>The Burger Menu!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      
    <li>
        {{burger_name}}
        <button class="burgerEat" data-name="{{this.burger_name}}" data-id="{{this.ID}}"> EAT ME </button>
    </li>

    {{/unless}}
  {{/each}}
</ul>
<form action="/burgers/create" method="post" class="create-form" style="text-align: center;">
  <div class="form-group">
    <p>Type in the name of your next burger, and hit enter!</p>
    <label for="ca">Add a Burger!:</label>
    <input type="text" id="burg" name="name">
  </div>
</div>


<div id="burgDevoured">

<h3> Devoured! </h3>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      
    <li>
        {{burger_name}}
        <button class="regurgitate" data-name="{{this.burger_name}}" data-id="{{this.ID}}"> Regurgitate? </button>
    </li>

    {{/if}}
  {{/each}}
</ul>

</div>

